---
interface Props {
  tag: string
  location?: string
}
const { tag, location } = Astro.props

const isOnAnimeCard = location === 'anime-card'
---

<a
  href=""
  class={`${isOnAnimeCard ? 'absolute bottom-14 left-5 bg-blue-400 hover:bg-blue-500 ' : ' hover:bg-gray-400  bg-gray-300 '} text-xs font-medium text-gray-800 px-2 py-1 transition-all duration-200 ease-in-out rounded-2xl`}
>
  {tag}
</a>
