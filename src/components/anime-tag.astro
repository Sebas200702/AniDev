---
import { getTagColor } from '@utils'
interface Props {
  tag: string
  type?: string
  location?: string
}
const { tag, type, location } = Astro.props

const isOnAnimeCard = location === 'anime-card'

const tagColor = getTagColor(type ?? '')
---

<a
  href=""
  class={`${isOnAnimeCard ? 'absolute bottom-14 left-5' : ''} text-xs h-min font-medium w-min text-gray-800 px-2 py-1 transition-all duration-200 ease-in-out rounded-2xl hover: ${tagColor}`}
>
  {tag}
</a>
