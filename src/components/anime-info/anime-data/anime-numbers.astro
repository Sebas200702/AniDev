---
import { StarIcon } from '@components/icons/star-icon'
import CalendarIcon from '@components/icons/calendar-icon.astro'
import ClockIcon from '@components/icons/clock-icon.astro'
interface Props {
  score: number
  year: string
  duration: string
}

const { score, year, duration } = Astro.props
---

<ul
  class="mt-4 flex w-100 flex-row justify-between  text-xl font-semibold md:text-2xl bg-Primary-900/50 px-5 py-2.5 rounded-lg backdrop-blur-md"
>
  <li class="flex flex-row items-center gap-2">
    <StarIcon style="h-8 w-8 text-enfasisColor" />{score?.toFixed(1) ?? '0'}
  </li>
  <li class="flex flex-row items-center gap-2">
    <CalendarIcon class="text-enfasisColor h-8 w-8" />{year}
  </li>
  <li class="flex flex-row items-center gap-2">
    <ClockIcon class="text-enfasisColor h-8 w-8" />{
      duration.replace(/\s*per\s*ep/i, '')
    }
  </li>
</ul>
