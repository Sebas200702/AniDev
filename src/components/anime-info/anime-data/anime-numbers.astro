---
import { StarIcon } from '@components/icons/star-icon'
import CalendarIcon from '@components/icons/calendar-icon.astro'
import ClockIcon from '@components/icons/clock-icon.astro'
interface Props {
  score: number
  year: string
  duration: string
}

const { score, year, duration } = Astro.props
---

<ul
  class="mt-4 flex w-full flex-row flex-wrap gap-6 text-xl font-semibold md:text-2xl"
>
  <li class="flex flex-row items-center gap-2">
    <StarIcon style="h-8 w-8 text-yellow-300" />{score?.toFixed(1) ?? '0'}
  </li>
  <li class="flex flex-row items-center gap-2">
    <CalendarIcon class="h-8 w-8 text-yellow-300" />{year}
  </li>
  <li class="flex flex-row items-center gap-2">
    <ClockIcon class="h-8 w-8 text-yellow-300" />{
      duration.replace(/\s*per\s*ep/i, '')
    }
  </li>
</ul>
