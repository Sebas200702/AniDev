---
import '@shared/styles/global.css'
import { ClientRouter } from 'astro:transitions'
import { SearchBar } from '@search/components/search-global/search-bar'
import { LoadWindowWidth } from '@shared/components/ui/load-window-width'
import { ProgressBar } from '@shared/components/ui/progres-bar'
import { MetadataService } from '@shared/services/metadata-service'
import { baseTitle, baseUrl } from '@shared/utils/base-url'
import { LoadUserPrefences } from '@user/components/user-settings/load-user-preferences'
import { AstroFont } from 'astro-font'
import Footer from 'domains/shared/components/layout/footer.astro'
import NavBar from 'domains/shared/components/layout/nav-bar/nav-bar.astro'
import '@shared/styles/fade-out.css'
import { CustomToaster } from '@shared/components/ui/custom-toaster'
import { MusicPlayerContainer } from 'domains/music/components/music-player/music-player-container'
import { AsideNav } from 'domains/shared/components/layout/aside'
import { ModalContainer } from 'domains/shared/components/modal/modal-container'

interface Props {
  animeId?: number
  title?: string
  description?: string
  image?: string
  themeId?: string
  characterId?: string
  artistName?: string
}

const { animeId, title, description, image, themeId, characterId, artistName } =
  Astro.props

let metaTitle = title || baseTitle
let metaDesc =
  description ||
  'AniDev is a modern anime streaming and exploration platform. It offers dynamic experiences for discovering, searching, and enjoying top animes.'
let metaImage = image || `${baseUrl}/og-image.png`

// Fetch metadata using the new MetadataService
if (animeId) {
  const metadata = await MetadataService.getAnimeMetadata(animeId)
  metaTitle = metadata.title
  metaDesc = metadata.description
  metaImage = metadata.image
}

if (themeId) {
  const metadata = await MetadataService.getMusicMetadata(Number(themeId))
  metaTitle = metadata.title
  metaDesc = metadata.description
  metaImage = metadata.image
}

if (characterId) {
  // Extract character ID from slug (format: name_id)
  const fullSlug = Astro.url.pathname.split('/').pop() || ''
  const lastUnderscoreIndex = fullSlug.lastIndexOf('_')
  const charId =
    lastUnderscoreIndex === -1
      ? Number(characterId)
      : Number(fullSlug.slice(lastUnderscoreIndex + 1))

  const metadata = await MetadataService.getCharacterMetadata(charId)
  metaTitle = metadata.title
  metaDesc = metadata.description
  metaImage = metadata.image
}

if (artistName) {
  const metadata = await MetadataService.getArtistMetadata(artistName)
  metaTitle = metadata.title
  metaDesc = metadata.description
  metaImage = metadata.image
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://a.animethemes.moe" />
    <link rel="preconnect" href="https://v.animethemes.moe" />

    <!-- Preload critical font -->
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="https://fonts.gstatic.com/s/nunito/v32/XRXV3I6Li01BKofIOOaBTMnFcQIG.woff2"
      crossorigin
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={metaDesc} />
    <meta property="og:image" name="og:image" content={metaImage} />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDesc} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:description" content={metaDesc} />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:image" content={metaImage} />
    <meta name="twitter:site" content={baseUrl} />
    <meta
      http-equiv="Content-Security-Policy"
      content="
    default-src 'self';
    connect-src 'self' data: blob: https://a.animethemes.moe https://v.animethemes.moe  https://i.ytimg.com;
    script-src
      'self'
      'unsafe-inline'
      https://cdn.jsdelivr.net
      https://www.gstatic.com
      http://www.gstatic.com;
    frame-src 'self' https://www.youtube.com/ https://www.youtube-nocookie.com/;
    style-src 'self' 'unsafe-inline';
    media-src 'self' blob: https://a.animethemes.moe https://v.animethemes.moe;
    font-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com;
    img-src
      'self'
      data:
      blob:
      https://i.ytimg.com
      https://coffee-advanced-tern-335.mypinata.cloud
      https://pub-92474f7785774e91a790e086dfa6b2ef.r2.dev
      https://lh3.googleusercontent.com/
      https://ani-dev.vercel.app
      https://www.youtube.com/;
    worker-src 'self' blob:;
  "
    />

    <AstroFont
      config={[
        {
          src: [],
          name: 'Nunito',
          googleFontsURL:
            'https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap',
          preload: true,
          display: 'swap',
          selector: 'body',
          fallback: 'sans-serif',
        },
      ]}
    />
    <link rel="canonical" href={Astro.url.href} />
    <title>{metaTitle}</title>
    <ClientRouter />
  </head>
  <body>
    <div id="modal-root"></div>
    <div
      id="app"
      class="bg-Primary-950 text-Primary-50 no-scrollbar max-w-[100dvw] overflow-x-hidden overflow-y-scroll"
    >
      <aside class="h-16 [grid-area:aside] md:h-full">
        <AsideNav client:load />
      </aside>
      <header class="h-full [grid-area:header]">
        <NavBar />
        <ProgressBar client:load />
      </header>

      <SearchBar client:only visible={false} />
      <LoadUserPrefences client:load />
      <LoadWindowWidth client:load />

      <main
        id="layout-player-container"
        class="relative flex max-w-[100dvw] flex-col [grid-area:main]"
      >
        <MusicPlayerContainer
          client:idle
          transition:persist
          className="col-start-1 row-start-1"
        />
        <slot />
        <CustomToaster client:idle />
      </main>
      <Footer />
      <ModalContainer client:idle />
    </div>
  </body>
</html>
