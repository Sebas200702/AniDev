---
import { Formulary } from '@components/auth/formulary'
import Layout from '@layouts/base.astro'
import { baseTitle } from '@utils/base-url'
const title = `Sign Up - ${baseTitle}`
const action = '/api/auth/signup'
const bgImage = '/sign-up.webp'
const step = Astro.url.searchParams.get('step') ?? ''
---

<Layout title={title}>
  <section class="mt-20 h-full w-full md:mt-0">
    <Formulary
      client:load
      title={'Sign Up'}
      action={action}
      bgImage={bgImage}
      step={step}
    />
  </section>
</Layout>
