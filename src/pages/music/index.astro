---
import Layout from '@layouts/base.astro'
import { MusicBanner } from '@music/components/music-page/music-banner'
import { MusicLayout } from '@music/components/music-page/music-layout'
import { baseTitle } from '@utils/base-url'

const title = `Anime Music - ${baseTitle}`
const description =
  'Discover and stream anime opening themes, ending songs, and soundtracks from your favorite series. Explore our extensive collection of anime music on AniDev.'
---

<Layout title={title} description={description}>
  <MusicBanner client:load />
  <MusicLayout client:load />
</Layout>
