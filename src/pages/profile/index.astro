---
import Layout from '@layouts/base.astro'
import { baseTitle } from '@utils/base-url'
import { UserInfo } from 'domains/user/components/user-info'
import { UserList } from 'domains/user/components/user-tabs/user-list'

const title = `Profile - ${baseTitle}`
const description =
  'Manage your AniDev profile, track your anime watchlist, view your watching history, and customize your preferences for the ultimate anime streaming experience.'
---

<Layout title={title} description={description}>
  <section
    class="p-y mx-auto mt-16 flex w-full flex-col gap-24 px-4 text-white md:gap-16 md:px-20"
  >

    <UserInfo client:load />

    <div class="relative">
      <UserList client:only />
    </div>
  </section>
</Layout>
