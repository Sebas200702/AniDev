---
import { Overlay } from '@components/layout/overlay'
import { Picture } from '@components/media/picture'
import { UserInfo } from '@components/profile/user-info'
import { UserList } from '@components/profile/user-tabs/user-list'
import Layout from '@layouts/base.astro'
import { baseTitle } from '@utils/base-url'
import { createImageUrlProxy } from '@utils/create-image-url-proxy'

const title = `Profile - ${baseTitle}`
const description =
  'Manage your AniDev profile, track your anime watchlist, view your watching history, and customize your preferences for the ultimate anime streaming experience.'
---

<Layout title={title} description={description}>
  <section
    class="p-y mx-auto mt-16 flex w-full flex-col gap-24 px-4 text-white md:gap-16 md:px-20"
  >
    <Picture
      styles="w-full h-100 object-cover object-center  absolute top-0 left-0"
      image={createImageUrlProxy(
        'https://media.kitsu.app/anime/cover_images/3936/original.jpg',
        '100',
        '0',
        'webp'
      )}
    >
      <img
        class="absolute inset-0 h-full w-full object-cover object-center"
        src={createImageUrlProxy(
          'https://media.kitsu.app/anime/cover_images/3936/original.jpg',
          '1080',
          '60',
          'webp'
        )}
        alt=""
        loading="lazy"
      />
      <Overlay
        className="to-Primary-950 absolute inset-0 h-full w-full bg-gradient-to-b"
      />
    </Picture>
    <UserInfo client:load />

    <div class="relative">
      <UserList client:only />
    </div>
  </section>
</Layout>
