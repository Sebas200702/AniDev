---
import { ParentalControl } from '@components/profile/settings/parental-control'
import { SearchHistory } from '@components/profile/settings/search-history'
import { SelectColor } from '@components/profile/settings/select-color'
import Layout from '@layouts/base.astro'
---

<Layout title="Settings">
  <section
    class="mx-auto mt-16 flex w-full flex-col gap-8 p-4 text-white xl:max-w-7xl"
  >
    <h2 class="text-3xl font-bold text-pretty">Settings</h2>
    <ul
      class="border-Primary-300/20 bg-Complementary flex w-full flex-col gap-4 rounded-lg border-1 p-4"
    >
      <li class="flex flex-row items-center justify-between gap-4">
        <div>
          <p class="text-l text-pretty">Enfasis Color</p>
          <small class="text-Primary-300 text-sx"
            >Select the color you want to use as enfasis color</small
          >
        </div>
        <SelectColor client:load />
      </li>
      <li class="flex flex-row items-center justify-between gap-4">
        <div>
          <p class="text-l text-pretty">Parental Control</p>
          <small class="text-Primary-300 text-sx"
            >Enable or disable content rated +18 (Default disabled)</small
          >
        </div>
        <ParentalControl client:load />
      </li>
      <li class="flex flex-row items-center justify-between gap-4">
        <div>
          <p class="text-l text-pretty">Search History</p>
          <small class="text-Primary-300 text-sx"
            >Enable or disable save search history (Default enabled)</small
          >
        </div>
        <SearchHistory client:load />
      </li>
    </ul>
  </section>
</Layout>
