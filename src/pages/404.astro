---
import Layout from '@layouts/base.astro'
const pageTitle = 'Page Not Found'
const description = 'The page you are looking for does not exist'
---

<Layout title={pageTitle}>
  <section
    class="mt-16 flex h-full w-full flex-col items-center justify-center gap-4 p-4 text-white"
  >
    <h2 class="mb-4 text-6xl font-bold">{pageTitle}</h2>
    <p class="mb-6 text-xl">{description}</p>
    <a href="/" class="text-enfasisColor hover:underline">Go back home</a>
  </section>
</Layout>
