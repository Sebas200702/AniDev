---
import { AnimeTop } from '@components/index/anime-top/top-anime'
import { AnimeBanner } from '@components/index/banners/anime-banner'
import { Carousel } from '@components/index/carousel/carousel'
import { ColectionList } from '@components/index/collections/colection-list'
import { AnimeSlider } from '@components/index/slider/anime-slider-list'
import Layout from '@layouts/base.astro'
---

<Layout>
  <Carousel client:load />
  <section class="-mt-16 mb-10  flex flex-col gap-y-6 md:mb-20 md:gap-y-20">
    <AnimeSlider
      client:visible
      url="/api/animes?limit_count=24&year_filter=2025&type_filter=tv&banners_filter=false"
      title="Top 2025"
    />
    <AnimeTop client:visible />
    <ColectionList client:visible id={1} />
    <AnimeSlider
      client:visible
      url="/api/getRecomendations"
      title="Special for you"
    />

    <AnimeBanner id={1} client:visible />
    <AnimeSlider
      client:visible
      url="/api/animes?limit_count=24&genre_filter=action&banners_filter=false"
      title="Action"
    />
    <AnimeSlider
      client:visible
      url="/api/animes?limit_count=24&type_filter=movie&banners_filter=false"
      title="Top Movies"
    />
    <AnimeBanner id={2} client:visible />
    <AnimeSlider
      client:visible
      url="/api/animes?limit_count=24&genre_filter=comedy&banners_filter=false"
      title="Comedy"
    />
    <AnimeSlider
      client:visible
      url="/api/animes?limit_count=24&genre_filter=drama&banners_filter=false"
      title="Drama"
    />
    <ColectionList client:visible id={2} />
    <AnimeBanner id={3} client:visible />
    <AnimeSlider
      client:visible
      url="/api/animes?limit_count=24&genre_filter=girlslove&banners_filter=false"
      title="Girls Love"
    />
    <AnimeBanner id={4} client:visible />
    <AnimeSlider
      client:visible
      url="/api/animes?limit_count=24&genre_filter=horror&banners_filter=false"
      title="Horror"
    />
    <ColectionList client:visible id={3} />
    <AnimeSlider
      client:visible
      url="/api/animes?limit_count=24&genre_filter=mystery&banners_filter=false"
      title="Mystery"
    />
    <AnimeBanner id={5} client:visible />
    <AnimeSlider
      client:visible
      url="/api/animes?limit_count=24&genre_filter=romance&banners_filter=false"
      title="Romance"
    />
    <AnimeSlider
      client:visible
      url="/api/animes?limit_count=24&genre_filter=sliceoflife&banners_filter=false"
      title="Slice of Life"
    />
  </section>
</Layout>
