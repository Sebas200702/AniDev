---
import Layout from '@layouts/base.astro'
import { WatchAnime } from 'domains/watch/components/watch-anime'
const slug = Astro.params.slug ?? ''
const currentEpisode = parseInt(Astro.url.searchParams.get('ep') ?? '1') || 1
---

<Layout>
  <WatchAnime client:load slug={slug} currentEpisode={currentEpisode} />
</Layout>
