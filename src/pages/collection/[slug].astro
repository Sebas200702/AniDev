---
import { PageColectionList } from '@components/collection/page-collection-list'
import Layout from '@layouts/base.astro'
import { slugToText } from '@utils/slug-to-text'
const [title, id] = Astro.params.slug?.split('_') ?? ['', '']
---

<Layout>
  <section class="mt-28 px-4 md:px-20">
    <PageColectionList title={slugToText(title)} id={id} client:visible />
  </section>
</Layout>
