---
import Layout from '@layouts/base.astro'
import { slugToText } from '@utils/slug-to-text'
import { PageColectionList } from '@collection/components/collection-list/collection-list'
const [title, id] = Astro.params.slug?.split('_') ?? ['', '']
---

<Layout>
  <section class="w-full">
    <PageColectionList title={slugToText(title)} id={id} client:visible />
  </section>
</Layout>
