---
import Layout from '@layouts/base.astro'
import { SearchComponent } from '@search/components/search-layout/search-section'
import { baseTitle } from '@shared/utils/base-url'

const title = `Search - ${baseTitle}`
const description =
  'Search for anime by title, genre, studio, or type. Find your next favorite anime series or movie with our comprehensive search tools.'
---

<Layout title={title} description={description}>
  <SearchComponent client:visible />
</Layout>
