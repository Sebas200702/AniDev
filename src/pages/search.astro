---
import Layout from '@layouts/base.astro'
import { baseTitle } from '@utils/base-url'
import { SearchComponent } from 'domains/search/components/search-section'

const title = `Search - ${baseTitle}`
const description =
  'Search for anime by title, genre, studio, or type. Find your next favorite anime series or movie with our comprehensive search tools.'
---

<Layout title={title} description={description}>
  <SearchComponent client:visible />
</Layout>
